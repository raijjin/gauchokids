extends ../layouts/default

block js

block css
	
block content			
		.container.funzone-container
			if galleries.length
				each gallery in galleries	
					.row.gallery-images
						if gallery.heroImage.exists
							.col-sm-4.col-md-4.gallery-image: img(src=gallery._.heroImage.limit(500,500)).img-rounded
							.funzone-title
								h2.funzone-game-title= gallery.name
								.game-description
									p!= gallery.content.description 
							.col-sm-8.col-md-8: .row
								each image in gallery.images
									.col-xs-4.col-sm-4.col-md-3.gallery-image: img(src=image.limit(300,300)).img-rounded
						else
							each image in gallery.images
								.col-xs-6.col-sm-4.col-md-3.gallery-image: img(src=image.limit(300,300)).img-rounded
